<button class="sideber-button" onclick="changeSidebar(this)" title="<%=t('sidebar')%>" rel='tooltip'><%= sidebar_menu_legend %></button>

<div class="sidebar-content-small container-fluid">
  <div class="center colored-title"><%= group_icon_legend %></div>
  <hr>

  <div class="row">
    <div class="col-sm-12">

      <ul class="nav nav-pills brand-pills nav-stacked" role="tablist">

        <li role="presentation" class="brand-nav"><%= link_to groups_path, title: t('.index'), rel: 'tooltip' do %>
          <span class="fa fa-list"></span>
          <% end %>
        </li>

      </ul>

    </div>
  </div>

</div>    


<div class="sidebar-content-large hidden container-fluid">
  <div class="center colored-title"><%= group_legend %></div>
  <hr>
  <div class="row">
    <div class="col-sm-12">


      <ul class="nav nav-pills brand-pills nav-stacked" role="tablist">
 
        <li role="presentation" class="brand-nav"><%= link_to groups_path, title: t('.index'), rel: 'tooltip' do %>
            <%= back_to_index_legend %>
          <% end %>
        </li>

      </ul>


    </div>
  </div>

  <hr>
  <div class="row">
    <div class="col-sm-12">
      <div class="center colored-title"><%= fa_icon("plus", size: '2x') %></div>
      <h3 class="center colored-title"><%= t('helpers.links.new') %></h3>
    </div>
  </div>


</div>
