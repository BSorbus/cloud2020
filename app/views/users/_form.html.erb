<div class="row">
  <div class="col-sm-12">
    <%= form_with(model: user, local: true) do |f| %>

      <% input_disabled ||= false  
         #if input_disabled is not passed to the partial it doesn't crash. 
         # We default it to false 
      %>

      <%= form_errors_for user %>

      <div class="row">
        <div class="col-sm-6">
          <div class="row">

            <div class="form-group col-sm-6">
              <%= f.label :user_name, class: 'control-label' %>
              <%= f.text_field :user_name, class: 'form-control input-sm', disabled: input_disabled %>
            </div>

            <div class="form-group col-sm-6">
              <%= f.label :email, class: 'control-label' %>
              <%= f.text_field :email, autofocus: true, class: 'form-control input-sm', disabled: !user.new_record? %>
            </div>

            <div class="form-group col-sm-6">
              <%= f.label :first_name, class: 'control-label' %>
              <%= f.text_field :first_name, class: 'form-control input-sm', disabled: input_disabled %>
            </div>

            <div class="form-group col-sm-6">
              <%= f.label :last_name, class: 'control-label' %>
              <%= f.text_field :last_name, class: 'form-control input-sm', disabled: input_disabled %>
            </div>

          </div>  <!-- /row -->
        </div>  <!-- /col-sm-6 -->

        <div class="col-sm-6">
          <div class="row">
            <div class="form-group col-sm-12">
              <%= f.label :note, class: 'control-label' %>
              <%= f.trix_editor :note %>
            </div>
          </div> <!-- /row -->
        </div> <!--/col-sm-6 -->

      </div>  <!-- /row -->


      <hr class="hr-without-top-margin">


      <div class="row">
        <div class="col-sm-12">
<!-- 
          <%#= link_to users_path, class: "btn btn-default" do %>
            <span class="fa fa-list"></span>
            <%#= t("helpers.links.index") %>
          <%# end %>
 -->
<!-- 
          <%#= link_to :back, class: "btn btn-default" do %>
 -->
          <%= link_to user.new_record? ? users_path() : user_path(user), class: "btn btn-default" do %>

            <span class="glyphicon glyphicon-arrow-left"></span>
            <%= t("helpers.links.back") %>
          <% end %>
          <%= f.submit nil, class: 'btn btn-success' %>

        </div> <!--/col-sm-12 -->
      </div> <!-- /row -->
      
    <% end %>

  </div> <!--/col-sm-11-->
</div>