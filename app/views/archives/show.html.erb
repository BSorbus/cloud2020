<br>
<div class="container-fluid"> 
  <div class="row">
    <div class="col-sm-2">
      <ul  class="nav nav-pills brand-pills nav-stacked">
        <li class="brand-nav active">
          <a href="#archive_show" data-toggle="tab"><%= archive_show_legend %></a>
        </li>

        <% if policy(:component).archive_index? %>
          <li class="brand-nav brand-nav-level-1">
            <a href="#components" data-toggle="tab"><%= component_index_legend %></a>
          </li>
        <% end %>

        <% if policy(@archive).work? %>
          <li class="brand-nav brand-nav-level-1">
            <a href="#works" data-toggle="tab"><%= work_index_legend %></a>
          </li>
        <% end %>

        <hr>

        <% if policy(:archive).index? %>
          <li>
            <%= link_to archives_path do %>
              <%= back_to_index_legend %>
            <% end %>
          </li>
        <% end %>

      </ul>
    </div>
    <div class="col-sm-10">
      <div class="tab-content clearfix">

        <div class="tab-pane active" id="archive_show">
          <%= render 'data', input_disabled: true, subtitle: archive_info_legend(@archive) %>
        </div>

        <div class="tab-pane" id="components">
          <%= render 'components/components_tab', componentable: @archive, subtitle: archive_info_legend(@archive) %>
        </div>

        <div class="tab-pane" id="works">
          <%= render 'works/works_tab', trackable_type: "Archive", trackable_id: @archive.id, subtitle: archive_info_legend(@archive) %>
        </div>

      </div>
    </div>

  </div>

</div>


<div id="myModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content"></div>
  </div>
</div>
