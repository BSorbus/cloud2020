<button class="sideber-button" onclick="changeSidebar(this)"><%= sidebar_menu_legend %></button>

<div class="sidebar-content-small container-fluid">
  <div class="center colored-title"><%= archive_icon_legend %></div>
  <hr>
   
  <div class="row">
    <div class="col-sm-12">

      <ul class="nav nav-pills brand-pills nav-stacked" role="tablist">

        <% if policy(:archive).new? %>
          <li role="presentation" class="brand-nav"><%= link_to new_archive_path, title: t('.new'), rel: 'tooltip' do %>
              <span class="fa fa-plus"></span>
            <% end %>
          </li>
        <% end %>

      </ul>

    </div>
  </div>

</div>    


<div class="sidebar-content-large hidden container-fluid">
  <div class="center colored-title"><%= archive_index_legend %></div>
  <hr>
  <div class="row">
    <div class="col-sm-12">

      <% if policy(:archive).new? %>
        <ul class="nav nav-pills brand-pills nav-stacked" role="tablist">
   
          <li role="presentation" class="brand-nav"><%= link_to new_archive_path, title: t('.new'), rel: 'tooltip' do %>
            <span class="fa fa-plus"></span>
            <%= t('helpers.links.new') %>
            <% end %>
          </li>

        </ul>

      <% end %>

    </div>
  </div>

  <hr>
  <div class="row">
    <div class="col-sm-12">
      <div class="center colored-title"><%= fa_icon("list", size: '2x') %></div>
      <h3 class="center colored-title"><%= t('helpers.links.index') %></h3>
    </div>
  </div>

</div>
