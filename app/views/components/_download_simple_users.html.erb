<table class="table table-hover">
  <thead>
    <tr>
      <th><%= User.human_attribute_name(:email) %></th>
      <th><%= User.human_attribute_name(:first_name) %></th>
      <th><%= User.human_attribute_name(:last_name) %></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @component.componentable.accesses_users.order(:email).uniq.each do |rec| %>
      <tr>
        <td class="col-sm-5"><%= rec.email %></td>
        <td class="col-sm-3"><%= rec.first_name %></td>
        <td class="col-sm-3"><%= rec.last_name %></td>
        <td class="col-sm-1">

          <% if access %>
            <%= link_to send_link_to_component_download_simple_component_path(@component.id, users_ids: [rec.id] ),
                                method: :get,
                                remote: true,
                                data: { confirm: t('helpers.links.confirm_send_mail_for_download_simple', data: rec.fullname) }, 
                                class: "btn btn-xs btn-default" do %>
              <span><%= send_email_legend %></span>
            <% end %>
          <% end %>

        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<% if access %>
  <%= link_to send_link_to_component_download_simple_component_path(@component.id, users_ids: @component.componentable.accesses_users.ids.uniq ),
                      method: :get,
                      remote: true,
                      data: { confirm: t('helpers.links.confirm_send_mail_for_download', data: t('to_all')) }, 
                      class: "pull-left btn btn-default" do %>
    <span class="fa fa-envelope"></span>
    <%= t("helpers.links.send_email_to_all") %>
  <% end %>
<% end %>
